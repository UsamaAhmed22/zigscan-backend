{
  "name": "zigscan-api",
  "version": "2.0.0",
  "description": "NestJS backend for ZigScan blockchain data",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:tunnel": "./start-with-tunnel.sh",
    "start:prod": "./start-production.sh",
    "start:simple": "./start-simple.sh",
    "build": "tsc -p tsconfig.build.json",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "load:test": "k6 run load-tests/zigscan-load.test.js",
    "deploy:pm2": "pm2 start ecosystem.config.js --env production",
    "deploy:docker": "docker-compose -f docker-compose.prod.yml up -d"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.4",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "deps": "^1.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "module": "^2.0.0",
    "node-fetch": "^3.3.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "ssh2": "^1.17.0",
    "swagger-ui-express": "^5.0.1",
    "tunnel-ssh": "^5.2.0",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.24",
    "@types/passport-jwt": "^4.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
